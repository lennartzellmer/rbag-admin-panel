# =============================================================================
# Application Environment Variables
# =============================================================================
#
# This file contains environment variables for the Nuxt application.
# For Docker development services, see: dev_docker/docker.env
#
# To use this file:
# 1. Copy this file to .env: cp .env.example .env
# 2. Update the values as needed for your environment
#
# =============================================================================

# ========================================================================
# MongoDB Configuration
# ========================================================================
NUXT_MONGODB_CONNECTION_STRING=mongodb://localhost/admin?authSource=admin&replicaSet=rs0&readPreference=primary

# ========================================================================
# MinIO/S3 Storage Configuration
# ========================================================================
NUXT_STORAGE_S3_ENDPOINT=localhost
NUXT_STORAGE_S3_PORT=9000
NUXT_STORAGE_S3_SSL=false
NUXT_STORAGE_S3_REGION=eu-central-1
NUXT_STORAGE_S3_BUCKET=rbag-anmeldesystem
NUXT_STORAGE_S3_TEMP_BUCKET=rbag-anmeldesystem-temp
NUXT_STORAGE_S3_ACCESS_KEY=minioadmin
NUXT_STORAGE_S3_SECRET_KEY=minioadmin123
NUXT_STORAGE_S3_PRESIGN_EXPIRES_IN=1800

# ========================================================================
# Nuxt session Configuration
# ========================================================================
NUXT_SESSION_PASSWORD=password-with-at-least-32-characters
NUXT_SESSION_COOKIE_SECURE=false
NUXT_SESSION_COOKIE_HTTP_ONLY=false
NUXT_SESSION_COOKIE_SAME_SITE=false

# ========================================================================
# Zitadel Configuration (Paste from Terraform output)
# ========================================================================
NUXT_OAUTH_ZITADEL_DOMAIN=http://localhost:8080
NUXT_OAUTH_ZITADEL_CLIENT_ID= # GET FROM TERRAFORM OUTPUT - see ./dev_docker/README.md
NUXT_ZITADEL_URL=http://localhost:8080
NUXT_ZITADEL_ORG_ID= # GET FROM TERRAFORM OUTPUT - see ./dev_docker/README.md
NUXT_ZITADEL_PROJECT_ID= # GET FROM TERRAFORM OUTPUT - see ./dev_docker/README.md
NUXT_ZITADEL_PERSONAL_ACCESS_TOKEN= # GET FROM TERRAFORM OUTPUT - see ./dev_docker/README.md

# ========================================================================
# Nuxt image configuration
# ========================================================================
NUXT_IMAGE_DOMAINS="localhost:9000"

# ========================================================================
# Docker specific environment variables
# ========================================================================
ZITADEL_MASTERKEY=password-with-32-characters!!!!!
